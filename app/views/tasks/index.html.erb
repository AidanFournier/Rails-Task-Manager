<div class="m-3">

  <h1>My tasks</h1>

<div class="border-bottom">
  <% @tasks.each do |task| %>
    <div class="d-flex align-items-center">
      <div class="mx-2">
        <% if task.completed %>
           <i class="far fa-check-square"></i>
        <% else %>
          <i class="far fa-square"></i>
        <% end %>
      </div>
      <p class="mt-3"><%= link_to task.title, task_path(task) %></li></p>
      <div class="mx-3">
         <%= link_to task_path(task.id), method: :delete, data: { confirm: "Are you sure?"} do %>
         <i class="fas fa-trash"></i>
         <% end %>
       </div>
    </div>
  <% end %>
</div>

<div class="mt-3">
  <p><%= link_to "Add a new task", new_task_path %></p>
</div>


<%#= link_to "delete", tasks_path(@task), method: "delete", data: { confirm: 'Are you sure you want to delete?' } %>

