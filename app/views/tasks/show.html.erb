<div class="m-3">
  <div class="header d-flex justify-content-between align-items-center">
    <h1><%= @task.title %></h1>
    <div class="btn btn-light rounded"><%= link_to "Update", edit_task_path %></div>
  </div>
  <div class="alert alert-secondary" role="alert"><%= @task.details %></div>
  <div class="border-bottom pb-3 mx-2">
    <% if @task.completed %>
        <i class="far fa-check-square"></i> <%= "This task is completed" %>
    <% else %>
        <i class="far fa-square"></i> <%= "This task is not completed" %>
    <% end %>
  </div>
  <div class="mt-3">
    <p><%= link_to "Back to list", tasks_path %></p>
  </div>
</div>

